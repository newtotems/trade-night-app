---
pagination:
  data: eventlist
  size: 1
  alias: event
permalink: "/event/join/{{ event.id }}/"
layout: layouts/home.njk
---
<h1>{{ event.title }}</h1>
<p>Event Type: {{ event.eventTypeName }}</p>
<p>Date: {{ event.date | readableDate }}</p>
<!-- Add more event details as needed -->

<a href="/event/trade/{{ event.id }}" class="inline-block px-6 py-3 text-lg font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition duration-300 ease-in-out">
  Trade for this Event
</a>

<!-- Debug output -->
<h2>Event Data:</h2>
<pre>
{{ event | dump(2) }}
</pre>

<h2>Available Collections:</h2>
<ul>
{% for collectionName, items in collections %}
  <li>{{ collectionName }}: {{ items.length }} items</li>
{% endfor %}
</ul>

<h2>Page Variables:</h2>
<pre>
{{ page | dump(2) }}
</pre>


