---
pagination:
  data: eventlist
  size: 1
  alias: event
permalink: "/event/join/{{ event.id }}/"
layout: layouts/home.njk
---

<div class="absolute top-0 left-0 w-full h-full bg-cover bg-no-repeat bg-fixed animate-loop-scroll" style="background-image: url('/img/PKBG.jpg');"></div>



<div class="flex flex-col justify-center bg-gray-50 py-6 sm:py-12" style="width: 100%; height: 100%; pointer-events: auto;"> <!-- Removed animations and positioning -->
  <div class="max-w-[1024px] mx-auto"> <!-- Constrained width to container -->
    <h1 class="text-2xl font-bold mb-4">{{ event.title }}</h1> <!-- Title remains -->
    <div class="flex-grow overflow-y-auto mb-16"> <!-- Kept text above button -->
      <p class="mb-2">{{ event.eventTypeData.name }}</p>
      <p class="mb-4">{{ event.eventSubTypeData.name }}</p>
      <!-- Add more event details as needed -->
    </div>
    
    <a href="/event/trade/{{ event.id }}" 
       class="block w-full px-6 py-3 text-lg font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition duration-300 ease-in-out"> <!-- Button remains clickable -->
      Trade for this Event
    </a>
  </div>
</div>


