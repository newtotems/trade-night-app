---
pagination:
  data: eventlist
  size: 1
  alias: event
permalink: "/event/join/{{ event.id }}/"
layout: layouts/home.njk
---
<div class="md:p-8 h-screen flex flex-col relative">
  <p class="absolute top-4 right-4 text-sm text-gray-600">{{ event.date | readableDate }}</p>

  <div class="flex-grow overflow-y-auto">
    <h1 class="text-2xl font-bold mb-4">{{ event.title }}</h1>
    <p class="mb-2">{{ event.eventTypeData.name }}</p>
    <p class="mb-4">{{ event.eventSubTypeData.name }}</p>
    <!-- Add more event details as needed -->
  </div>

  <div class="absolute bottom-4 right-4">
    <a href="/event/trade/{{ event.id }}" class="inline-block px-6 py-3 text-lg font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition duration-300 ease-in-out">
      Trade for this Event
    </a>
  </div>
</div>

<script>
  console.log('Event Data:', JSON.parse('{{ event | dump | safe | replace("'", "\\'") }}'));
</script>



