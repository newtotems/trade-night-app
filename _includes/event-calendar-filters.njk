<div class="flex justify-center mb-6">
  <div class="inline-flex rounded-md shadow-sm" role="group">
    <button type="button" class="filter-button px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-blue-500 dark:focus:text-white" data-filter="all">
      All
    </button>
    {% if eventTypes %}
      {% for eventType in eventTypes %}
        <button type="button" class="filter-button px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-blue-500 dark:focus:text-white" data-filter="eventType{{ eventType.eventId }}">
          {{ eventType.name }}
        </button>
      {% endfor %}
    {% else %}
      <p>No event types found.</p>
    {% endif %}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const filterButtons = document.querySelectorAll('.filter-button');
  const eventItems = document.querySelectorAll('.event-containergroup > *');
  const subTypeGroups = document.querySelectorAll('.filtered');

  filterButtons.forEach(button => {
    button.addEventListener('click', function() {
      const filter = this.getAttribute('data-filter');
      
      if (filter.startsWith('eventType') || filter === 'all') {
        // Main event type filtering
        eventItems.forEach(item => {
          if (filter === 'all' || item.classList.contains(filter)) {
            item.style.display = '';
          } else {
            item.style.display = 'none';
          }
        });

        // Show/hide subtype groups
        subTypeGroups.forEach(group => {
          if (filter === 'all' || group.classList.contains(filter)) {
            group.style.display = '';
          } else {
            group.style.display = 'none';
          }
        });
      } else if (filter.startsWith('eventSubType')) {
        // Subtype filtering
        eventItems.forEach(item => {
          if (item.classList.contains(filter)) {
            item.style.display = '';
          } else {
            item.style.display = 'none';
          }
        });
      }
    });
  });
});
</script>

<!-- New grouped buttons for event subtypes -->
<div class="flex flex-col items-center mt-6">
  {% set groupedSubTypes = {} %}
  {% for subType in eventSubTypes %}
    {% set eventTypeId = subType.eventTypeId | string %}
    {% if eventTypeId not in groupedSubTypes %}
      {% set groupedSubTypes = groupedSubTypes | merge({(eventTypeId): []}) %}
    {% endif %}
    {% set groupedSubTypes = groupedSubTypes | merge({
      (eventTypeId): (groupedSubTypes[eventTypeId] + [subType])
    }) %}
  {% endfor %}

  {% for eventTypeId, subTypes in groupedSubTypes %}
    <div class="inline-flex rounded-md shadow-sm mb-2 filtered eventType{{ eventTypeId }}" role="group">
      {% for subType in subTypes %}
        <button type="button" class="filter-button px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-blue-500 dark:focus:text-white" data-filter="eventSubType{{ subType.eventSubTypeId }}">
          {{ subType.name }}
        </button>
      {% endfor %}
    </div>
  {% endfor %}
</div>