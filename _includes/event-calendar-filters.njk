<div class="flex justify-center mb-6">
  <div class="controls inline-flex rounded-md shadow-sm" role="group">
    <button type="button" class="filter px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-blue-500 dark:focus:text-white" data-filter="all">
      All
    </button>
    {% if eventTypes %}
      {% for eventType in eventTypes %}
        <button type="button" class="filter px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-blue-500 dark:focus:text-white" data-filter=".eventType{{ eventType.eventId }}">
          {{ eventType.name }}
        </button>
      {% endfor %}
    {% else %}
      <p>No event types found.</p>
    {% endif %}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  var mixer = mixitup('.event-container', {
    selectors: {
      target: '.event-item'
    },
    controls: {
      scope: 'local'
    }
  });

  var activeFilters = [];

  // Set up click event for filter buttons
  var filterButtons = document.querySelectorAll('.controls .filter');
  filterButtons.forEach(function(button) {
    button.addEventListener('click', function() {
      var filter = this.getAttribute('data-filter');
      
      if (filter === 'all') {
        activeFilters = [];
        filterButtons.forEach(btn => btn.classList.remove('active'));
        this.classList.add('active');
      } else {
        this.classList.toggle('active');
        var index = activeFilters.indexOf(filter);
        if (index > -1) {
          activeFilters.splice(index, 1);
        } else {
          activeFilters.push(filter);
        }
        document.querySelector('[data-filter="all"]').classList.remove('active');
      }

      if (activeFilters.length === 0) {
        mixer.filter('all');
      } else {
        mixer.filter(activeFilters.join(','));
      }
    });
  });
});
</script>